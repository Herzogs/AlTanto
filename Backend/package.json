{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend del proyecto final de carrera - Al Tanto",
  "scripts": {
    "start": "ts-node src/server.ts",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --env-file=.env src/server.ts",
    "test": "cross-env NODE_ENV=test PORT=3000 jest --silent --runInBand --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test PORT=3000 DB_PORT=3306 DB_USER=root DB_HOST=localhost  BD_NAME_DATABASE=altanto_db DB_DIALECT=mysql jest --silent --watchAll --runInBand --detectOpenHandles "
  },
  "keywords": [],
  "author": "Equipo 5mentarios",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "1.4.11",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "jest": "29.7.0",
    "mysql2": "^3.9.7",
    "sequelize": "^6.37.3",
    "supertest": "7.0.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0"
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^6.3.12",
    "cors": "2.8.5",
    "crypto-js": "^4.2.0",
    "express": "4.19.2",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
